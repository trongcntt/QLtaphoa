
@{
    ViewBag.Title = "QuanLySanPham";
    Layout = null;
}

@using TH_CozaStore.Models;
@model List<tSanPham>

<!DOCTYPE html>
<html>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous" />
<link rel="stylesheet" type="text/css" href="./../css/base.css" />
<link rel="stylesheet"
      href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
      integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
      crossorigin="anonymous" />
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

<!-- notification and profile -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous" />

<!-- <link rel="stylesheet" type="text/css" href="./../css/btn_specical.css"> -->

<script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

<script>
    $(document).ready(function () {
        $(".profile .icon_wrap").click(function () {
            $(this).parent().toggleClass("active");
            $(".notifications").removeClass("active");
        });

        $(".notifications .icon_wrap").click(function () {
            $(this).parent().toggleClass("active");
            $(".profile").removeClass("active");
        });

        $(".show_all .link").click(function () {
            $(".notifications").removeClass("active");
            $(".popup").show();
        });

        $(".close").click(function () {
            $(".popup").hide();
        });
    });
</script>
<head>
    <meta charset="utf-8" />

</head>
<body>

    <div class="container" style="padding-top: 120px">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-7 align-self-center">
                    <h4 class="page-title text-truncate text-dark font-weight-medium mb-1">
                        Quản lý sản phẩm
                    </h4>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb m-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="https://google.com" class="text-muted">Trang chủ</a>
                                </li>
                                <li class="breadcrumb-item text-muted active"
                                    aria-current="page">
                                    <a style="color: #3187f1ff">Quản lý sản phẩm</a>
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row page-breadcrumb pb-3" style="margin-left: 0.5%">
            <div class="row form-group">
                @*    <div class="col-lg-3 pt-4 px-2">
                        <div class="customize-input">
                            <input type="text"
                                   class="form-control"
                                   placeholder="Nhập tên sản phẩm ..." />
                        </div>
                    </div>*@
                <div class="col-lg-9 px-0">
                    <div class="pt-4" style="padding-left: 20px">
                        @*                        <button type="button" class="btn btn-primary" id="btn-search">
                                Tìm kiếm
                            </button>*@
                        <button type="button"
                                class="btn btn-success"
                                style="float: right">
                            <a style="color: white !important; text-decoration: none"
                               href="@Url.Action("ThemSP", "Admin")">Thêm</a>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <table class="table table-hover table-bordered mb-0">
                <thead class="bg-primary text-white">
                    <tr>

                        <th scope="col">Mã sản phẩm</th>
                        <th scope="col">Tên sản phẩm</th>
                        <th scope="col">Giá nhập</th>
                        <th scope="col">Giá bán</th>
                        <th scope="col">Loai SP</th>
                        <th scope="col">Anh</th>
                        <th scope="col">Ma Loai</th>
                        <th scope="col">Gioi Thieu</th>
                    </tr>
                </thead>
                <tbody class="border border-secondary" id="tbl">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaSP</td>
                            <td>@item.TenSP</td>
                            <td>@item.GiaNhap</td>
                            <td>@item.GiaBan</td>
                            <td>@item.loaiSP</td>
                            <td>@item.Anh</td>
                            <td>@item.MaLoai</td>
                            <td>@item.GioiThieu</td>

                            <td class="option">

                                <span>

                                    <a href="@Url.Action("SuaSP", "Admin")"> <img width="30" src="~/Assets/images/icons/icon_edit.png" /> </a>
                                </span>
                                <span>

                                    <a href="@Url.Action("XoaSP", "Admin")"><img width="30" src="~/Assets/images/icons/icon_remove.png" /> </a>
                                </span>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</body>


</html>