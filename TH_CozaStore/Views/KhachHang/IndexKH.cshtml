@using TH_CozaStore.Models;
@using PagedList.Mvc;
@model PagedList.IPagedList<tSanPham>
@{
    ViewBag.Title = "IndexKH";
    Layout = "~/Views/Shared/_LayoutKhachHang.cshtml";
}

<div class="row isotope-grid">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
            <!-- Block2 -->
            <div class="block2">
                <div class="block2-pic hov-img0">
                    <img src="@Url.Content("/images/" + item.Anh)" alt="IMG-PRODUCT">

                    <a href="@Url.Action("DetailKH", "KhachHang", new { @maSp = item.MaSP })" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
                        Quick View
                    </a>
                </div>

                <div class="block2-txt flex-w flex-t p-t-14">
                    <div class="block2-txt-child1 flex-col-l ">
                        <a href="@Url.Action("DetailKH", "KhachHang", new { @maSp = item.MaSP })" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                            @item.TenSP
                        </a>

                        <span class="stext-105 cl3">
                            @item.GiaBan
                        </span>
                    </div>

                    <div class="block2-txt-child2 flex-r p-t-3">
                        <a href="@Url.Action("DetailKH", "KhachHang", new { @maSp = item.MaSP })" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                            <img class="icon-heart1 dis-block trans-04" src="~/Assets/images/icons/icon-heart-01.png" alt="ICON">
                            <img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/Assets/images/icons/icon-heart-02.png" alt="ICON">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
Trang @(Model.PageCount<Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("IndexKH", new { page = page, loaiSP = ViewBag.QG }))